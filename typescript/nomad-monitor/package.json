{
  "author": "Illusory Systems Inc.",
  "license": "Apache 2.0",
  "name": "@nomad-xyz/nomad-monitor",
  "version": "0.1.0",
  "description": "Nomad Monitor",
  "scripts": {
    "health": "ts-node src/run.ts health",
    "e2e": "ts-node src/run.ts e2e",
    "relayer": "ts-node src/run.ts relayer",
    "processor": "ts-node src/run.ts processor",
    "health-local": "ts-node src/run.ts health | ./node_modules/.bin/bunyan",
    "relayer-local": "ts-node src/run.ts relayer | ./node_modules/.bin/bunyan",
    "processor-local": "ts-node src/run.ts processor | ./node_modules/.bin/bunyan",
    "monitor-once": "ts-node src/bridgeHealth/monitor.ts once | ./node_modules/.bin/bunyan",
    "monitor-all": "ts-node src/runAll.ts | ./node_modules/.bin/bunyan",
    "value": "ts-node src/value.ts | ./node_modules/.bin/bunyan",
    "trace": "ts-node src/trace.ts",
    "gas": "ts-node src/gas.ts",
    "build": "rm tsconfig.tsbuildinfo & tsc",
    "check": "rm tsconfig.tsbuildinfo & tsc --noEmit",
    "prettier": "prettier --write .",
    "relink": "cd ../nomad-sdk && npm run build && cd dist && npm link && cd ../../nomad-monitor && npm link @nomad-xyz/sdk",
    "release-docker": "docker buildx build --platform linux/amd64,linux/arm64 --push -t gcr.io/nomad-xyz/nomad-monitor:sha-$(git rev-parse --short HEAD) ."
  },
  "dependencies": {
    "@nomad-xyz/contract-interfaces": "^1.0.2",
    "@nomad-xyz/sdk": "^0.1.10",
    "@types/bunyan": "^1.8.7",
    "@types/express": "^4.17.13",
    "@types/google-spreadsheet": "^3.1.5",
    "@types/plotly.js": "^1.54.16",
    "@types/request": "^2.48.7",
    "axios": "^0.21.4",
    "bunyan": "^1.8.15",
    "dotenv": "^10.0.0",
    "ethers": "^5.4.6",
    "express": "^4.17.1",
    "fs": "^0.0.1-security",
    "google-spreadsheet": "^3.1.15",
    "got": "^11.8.2",
    "moment": "^2.29.1",
    "nodeplotlib": "^0.7.6",
    "p-limit": "^3.1.0",
    "plotly.js": "^2.5.1",
    "prom-client": "^14.0.0",
    "request": "^2.88.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "prettier": "^2.4.1"
  }
}
